<%= form_for(@article, html: {multipart: true}) do |f| %>
  <ul>
    <% @article.errors.full_messages.each do |error| %>
      <li><%= error %></li>
    <% end %>
  </ul>
  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title, class: "span4" %>
  </p>
  <p>
    <%= f.label :body %><br />
    <%= f.text_area :body, class: "span10", rows: "3" %>
  </p>
  <p>
    <%= f.label :tag_list %><br />
    <%= f.text_field :tag_list, class: "span4" %>
  </p>
  <p>
    <% if @article.image.exists? %>
      <%= image_tag @article.image.url %><br/>
    <% end %>
    <%= f.label :image, "Attach an Image" %><br />
    <%= f.file_field :image %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>
